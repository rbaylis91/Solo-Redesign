{% assign page = pages.frontpage %}

{% if settings.homepage_is_product_page %}
	{% assign product = collections.stuff.products.first %}
	{% include 'product' %}
{% else %}
<div class="rte">
  {{ page.content }}
</div>
{% endif %}


<!-- Begin slider -->
<div class="row flexslider-outer clearfix">
  <h5 class="flexslider-header clearfix">Replace this with a theme setting</h5>
  <div class="twelve columns">
    <div class="flexslider-container">
      <div class="flexslider">
         
          <ul class="slides">{% for product in collections[settings.product_slider_collection].products %}
            <li>
              <a href="{{ product.url | within: collections.all }}">
                <img src="{{ product.images[0] | product_img_url: "small" }}" alt="{{ product.title | escape }}" />
              </a>
              <h5><a href="{{ product.url | within: collections.all }}">{{ product.title | escape | truncate: 20 }}</a></h5>
              <p class="price">{{ product.price | money }}</p>
            </li>{% endfor %}
          </ul>
      </div>
    </div>
  </div>
</div>
<!-- End slider -->