<div class="fullscreen-banner outer">
  <div class="fb-inner table">
    <div class="fb-content vert-table-cell">
        {% if settings.fullscreen_banner_content == "image" %}
        <img id="fb-image" class="fullscreen-fluid" src="{{'fullscreen_featured_image.png'|asset_url}}"/>
        {% endif %}
        {% if settings.fullscreen_banner_content == "video" %}
        <div class="video-embed">
          <div class="video-embed-center">
            <div class='embed-container fullscreen-fluid'>
              {{settings.fullscreen_video_url}}
            </div>
          </div>
        </div>
        {% endif %}
        <h1>{{settings.fullscreen_header}}</h1>
        <div id="fb-call-to-action" class="btn">View Details</div>
    </div>
  </div>
  
</div>
