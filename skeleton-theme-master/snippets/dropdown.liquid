<ul class="sf-menu clearfix">
  {% for link in linklists.main-menu.links %}
  <li class="desktop-links">
    <a href="{{ link.url }}">{{ link.title }}</a>
    {% capture child_list_handle %}{{ link.title | handleize }}{% endcapture %}
    {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
    <ul>
      {% for l in linklists[child_list_handle].links %}
      <li><a href="{{ l.url }}">{{ l.title }}</a></li>
      {% endfor %}
    </ul>
    {% endif %}
  </li>
  {% endfor %}
  <li class="nav-divider"></li>
  <li class="nav-option"><a href="/search"><i class="fa fa-search"></i></a></li>
  <li class="nav-option"><a href="#"><i class="fa fa-user"></i></a></li>
  <li class="nav-option"><a href="/cart"><i class="fa fa-shopping-cart"></i></a></li>
  <li class="nav-option show-mobile-only hamburger"><a href="#"><i class="fa fa-bars"></i></a></li>  
</ul>